{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" target="_blank" href="http://portail.inetpsa.com/Pages/sk-SK/gphome.aspx">
                    <img alt="Brand" src="{{ asset('img/psa_logo_white.svg') }}" style="max-height: 30px;">
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <div class="navbar-form navbar-left">
                    <div class="form-group">
                        <select id="linkaSelect" class="form-control">
                            {% for linka in linky %}
                                <option value="{{ linka.id }}">{{ linka.nazov }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group" style="margin-left: 1rem;">
                        <input id="datePicker" type="text" class="form-control">
                    </div>
                    <button id="analyseBtn" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span>
                        Analyzova≈•
                    </button>
                </div>

                <div class="navbar-form navbar-right">
                    <button id="exportBtn" class="btn btn-success disabled"><span class="glyphicon glyphicon-export"></span>
                        Export
                    </button>
                </div>
            </div>
        </div>
    </nav>
    <main>
        <div id="preloader" style="display: none;">
            <div class="loader">
                <div class="inner one"></div>
                <div class="inner two"></div>
                <div class="inner three"></div>
            </div>
        </div>
        <div id="mainArea" class="container-fluid"></div>
    </main>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
{% endblock %}
